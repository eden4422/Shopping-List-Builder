<Window x:Class="Shopping_list_builder.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_list_builder"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="200" SizeToContent="WidthAndHeight" ResizeMode="NoResize">

    <StackPanel Margin="10">
        <Label Content="Recipe Name:"/>
        <TextBox Name="RecipeNameTextField" Width="160" Margin="0,0,0,10"/>
        <Label Content="Description:"/>
        <TextBox Name="DescriptionTextField" Width="160" Height="100" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <Button Name="AddButton" Content="Add" Width="160"/>
    </StackPanel>
</Window>
