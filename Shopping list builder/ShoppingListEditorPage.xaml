<Page x:Class="Shopping_list_builder.ShoppingListEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shopping_list_builder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShoppingListEditorPage">

    <Grid>
        
        <TreeView x:Name="itemsTree" Margin="0,37,400,33" RenderTransformOrigin="0,0.5"/>
        <Label Content="Items" RenderTransformOrigin="0,0.5" Margin="112,-2,512,415" HorizontalAlignment="Center"/>
        
        <ListBox x:Name="filterListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="405,37,0,0" RenderTransformOrigin="1,0.5" SelectionMode="Multiple"/>
        <Label Content="Filters" Margin="559,0,154,418" RenderTransformOrigin="1,0.5" HorizontalAlignment="Center"/>
        <TextBox x:Name="totalTextbox" HorizontalAlignment="Left" Margin="280,422,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" IsReadOnly="True" Height="28"/>
        <Button x:Name="backButton" Content="Back" Margin="0,417,698,0"/>
        <Button x:Name="finalizeButton" Content="Finalize" Margin="107,418,525,-1"/>


    </Grid>
</Page>
