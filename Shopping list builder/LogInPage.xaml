<Page x:Class="Shopping_list_builder.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shopping_list_builder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogInPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/background.jpg" />
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="images/logo.jpg" Width="100" Height="100"/>
            <Label Content="Username" Foreground="white"/>
            <TextBox Name="username" Width="200" Margin="0,10"/>
            <Label Content="Password" Foreground="white"/>
            <PasswordBox Name="password" Width="200" Margin="0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Login" Width="50" Margin="0,0,10,0" Click="Button_Click" Background="#eb8f06"/>
                <Button Content="Sign Up" Width="50" Margin="10,0,0,0"  Click="Button_Click_1" Background="#eb8f06" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
