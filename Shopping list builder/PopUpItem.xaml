<Window x:Class="Shopping_list_builder.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping_list_builder"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="200" SizeToContent="WidthAndHeight" ResizeMode="NoResize">

    <StackPanel Margin="10">
        <Label Content="Item Name:"/>
        <TextBox Name="ItemNameTextField" Width="160" Margin="0,0,0,10"/>
        <Label Content="Quantity:"/>
        <TextBox Name="ItemQuantityTextField" Width="160" Height="23" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <Label Content="Unit:"/>

        <ComboBox Name="ItemUnitTextField" Width="160" Height="23" Margin="0,0,0,10">
            <ComboBoxItem Content="cups"/>
            <ComboBoxItem Content="oz"/>
            <ComboBoxItem Content="tbs"/>
            <ComboBoxItem Content="tsp"/>
            <ComboBoxItem Content="fl oz"/>
            <ComboBoxItem Content="qts"/>
        </ComboBox>

        <Button Name="ItemAddButton" Content="Add" Width="160" Click="AddButton_Click_1"/>
    </StackPanel>
</Window>
