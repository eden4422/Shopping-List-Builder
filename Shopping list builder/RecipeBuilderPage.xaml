<Window x:Class="Shopping_list_builder.RecipeBuilderPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe and Ingredients Window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Recipes List -->
        <ListView Grid.Row="0" Margin="0,10,0,0" VerticalAlignment="Top" Height="152" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Recipes" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Buttons for Recipes -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Add Recipe" Width="100" Click="AddRecipe_Click"/>
            <Button Content="Delete Recipe" Width="100" Click="DeleteRecipe_Click"/>
        </StackPanel>

        <!-- Ingredients List -->
        <ListView Grid.Row="1" Margin="0,40,0,0" VerticalAlignment="Top" Grid.RowSpan="3" Height="162">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ingredients" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Buttons for Ingredients -->
        <UniformGrid Grid.Row="3" Columns="3" HorizontalAlignment="Right" Margin="10">
            <Button Content="Add Ingredient" Width="100" Click="AddIngredient_Click"/>
            <Button Content="Delete Ingredient" Width="100" Click="DeleteInredient_Click"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="+" Width="30" Click="IncrementIngredient_Click"/>
                <Button Content="-" Width="30" Click="DecrementIngredient_Click"/>
            </StackPanel>
        </UniformGrid>

        <!-- Back Button -->
        <Button Grid.Row="4" Content="Back" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="75" Height="30"/>
    </Grid>
</Window>
