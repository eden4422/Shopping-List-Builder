<Window x:Class="RecipeAndIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe and Ingredients Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Recipes List -->
        <ListView Grid.Column="0" Margin="10,222,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Recipes"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Ingredients List -->
        <ListView Grid.Column="0" Margin="10,10,10,217">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ingredients"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Buttons -->
        <StackPanel Grid.Column="1" Margin="10">
            <Button Content="Add Ingredient"/>
            <Button Content="Delete Ingredient"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="+" Width="30" Margin="0 0 5 0"/>
                <Button Content="-" Width="30" Margin="0 0 5 0"/>
            </StackPanel>
            <Button Content="Add"/>
        </StackPanel>
    </Grid>
</Window>
